---
title: "{{ homer_title }}"
subtitle: "{{ homer_subtitle }}"
logo: "/assets/tools/icons/logo.png"

stylesheet: "/assets/custom.css"

header: true
footer: false
columns: 3
connectivityCheck: true

theme: default
colors:
  light:
    highlight-primary: "#F39C12"
    highlight-secondary: "#F8C471"
    highlight-hover: "#FAD7A0"
    background: "#f5f5f5"
    card-background: "#ffffff"
    text: "#363636"
    text-header: "#ffffff"
    text-title: "#303030"
    text-subtitle: "#424242"
    card-shadow: rgba(0, 0, 0, 0.1)
    link: "#3273dc"
    link-hover: "#363636"
  dark:
    highlight-primary: "#F39C12"
    highlight-secondary: "#F8C471"
    highlight-hover: "#323232"
    background: "#262626"
    card-background: "#323232"
    text: "#eaeaea"
    text-header: "#ffffff"
    text-title: "#fafafa"
    text-subtitle: "#f5f5f5"
    card-shadow: rgba(31, 31, 31, 0.4)
    link: "#283747"
    link-hover: "#ffdd57"

links:
  - name: "Google"
    icon: "fab fa-google"
    url: "https://google.com/"
  - name: "Github"
    icon: "fab fa-github"
    url: "https://github.com/"

services:
  - name: "Media | Files"
    icon: "fas fa-photo-video"
    items:
{% for item in services if "Media | Files" in item.category and item.url != "" %}
    - name: "{{ item.name }}"
      subtitle: "{{ item.subtitle }}"  
      logo: "{{ item.logo }}"
      url: "{{ item.url }}"
{% if item.type %}
      type: "{{ item.type }}"
{% if item.endpoint|length %}
      endpoint: "{{ item.endpoint }}"
{% else %}
      endpoint: "http://{{ ansible_default_ipv4.address }}:7000/{{ item.url }}"
{% endif %}
{% endif %}
#      target: "_blank"


{% endfor %}

  - name: "Applications"
    icon: "fas fa-cloud"
    items:
{% for item in services if "Applications" in item.category and item.url != "" %}
    - name: "{{ item.name }}"
      subtitle: "{{ item.subtitle }}"
      logo: "{{ item.logo }}"
      url: "{{ item.url }}"
{% if item.type %}
      type: "{{ item.type }}"
{% if item.endpoint|length %}
      endpoint: "{{ item.endpoint }}"
{% else %}
      endpoint: "http://{{ ansible_default_ipv4.address }}:7000/{{ item.url }}"
{% endif %}
{% endif %}
      target: "_blank"

{% endfor %}

  - name: "Management"
    icon: "fas fa-server"
    items:
{% for item in services if "Management" in item.category and item.url != "" %}
    - name: "{{ item.name }}"
      subtitle: "{{ item.subtitle }}"
      logo: "{{ item.logo }}"
      url: "{{ item.url }}"
{% if item.type %}
      type: "{{ item.type }}"
{% if item.endpoint|length %}
      endpoint: "{{ item.endpoint }}"
{% else %}
      endpoint: "http://{{ ansible_default_ipv4.address }}:7000/{{ item.url }}"
{% endif %}
{% endif %}
      target: "_blank"

{% endfor %}